<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Menu Item"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item Name"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/inputIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingredients (comma separated)"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/inputSmallPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:minLines="3"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="12dp"/>

        <!-- Generate AI Description -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerateAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ¨ Generate Description with AI"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/secondaryForeground"
            android:textColor="@color/cardview_light_background"
            app:cornerRadius="6dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image URL"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputImageUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Image Preview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:spacing="8dp">

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/outline_add_a_photo_24"
                android:background="@drawable/edittext_bg"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPickImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose Image"
                android:backgroundTint="@color/destructive"
                android:textColor="@color/cardview_light_background"
                app:cornerRadius="6dp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>


        <!-- Add Item Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Add Item"
            android:backgroundTint="@color/primary"
            android:textColor="@color/cardview_light_background"
            app:cornerRadius="6dp"/>
    </LinearLayout>
</ScrollView>
