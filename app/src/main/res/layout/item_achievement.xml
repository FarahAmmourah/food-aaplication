<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="14dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_locked_card"
    android:gravity="center_vertical"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/imgAchievementIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_lock"
        android:layout_marginEnd="12dp"
        android:contentDescription="Achievement icon" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvAchievementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Order"
            android:textColor="@color/foreground"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium" />

        <TextView
            android:id="@+id/tvAchievementSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete your first order"
            android:textColor="@color/secondaryForeground"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_medium" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvAchievementStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locked"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:background="@drawable/bg_locked_card"
        android:gravity="center" />
</LinearLayout>
