<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Food Image -->
        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginEnd="12dp" />

        <!-- Right side (texts + prices) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Food name + rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvFoodName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Margherita Pizza"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜… 4.8"
                    android:textColor="#F39C12"
                    android:textSize="14sp"
                    android:paddingStart="4dp" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tvFoodDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh mozzarella, tomato sauce, basil"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="2dp" />

            <!-- Restaurant -->
            <TextView
                android:id="@+id/tvRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@Mario's Pizzeria"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />

            <!-- Price options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <!-- Small -->
                <LinearLayout
                    android:id="@+id/btnSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/btn_size_bg"
                    android:padding="6dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Small  $10.99"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:layout_marginEnd="6dp"/>

                    <ImageView
                        android:id="@+id/iconAddSmall"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/ic_input_add"
                        android:tint="#000000"/>
                </LinearLayout>

                <!-- Large -->
                <LinearLayout
                    android:id="@+id/btnLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/btn_size_bg"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/tvLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Large  $14.99"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:layout_marginEnd="6dp"/>

                    <ImageView
                        android:id="@+id/iconAddLarge"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/ic_input_add"
                        android:tint="#000000"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>