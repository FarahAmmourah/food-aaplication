<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgCartFood"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCartName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Item (Size)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/foreground"/>

            <TextView
                android:id="@+id/tvCartRestaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@Restaurant"
                android:textSize="14sp"
                android:textColor="@color/mutedForeground"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageButton
                    android:id="@+id/btnDecrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_remove"
                    android:tint="@color/primary"
                    android:contentDescription="Decrease"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/tvCartQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:padding="8dp"/>

                <ImageButton
                    android:id="@+id/btnIncrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_add"
                    android:tint="@color/primary"
                    android:contentDescription="Increase"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/tvCartPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
