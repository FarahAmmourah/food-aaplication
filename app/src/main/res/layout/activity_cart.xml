<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Cart"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/foreground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mutedForeground"
        android:layout_below="@id/tvCart"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/layoutEmptyCart"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_cart_empty"
            android:layout_marginBottom="12dp"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/tvEmptyCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your cart is empty"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/foreground"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add some delicious items from restaurants to get started"
            android:textSize="14sp"
            android:textColor="@color/mutedForeground"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCartActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_above="@id/bottomNavigationView"
        android:background="@color/background"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: 0.00 JD"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/foreground"
            android:gravity="end"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelCart"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel Cart"
                android:textColor="@color/destructiveForeground"
                android:layout_marginEnd="8dp"
                android:elevation="6dp"
                app:cornerRadius="12dp"
                app:rippleColor="@color/mutedForeground"
                android:backgroundTint="@color/destructive" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOrderNow"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Checkout"
                android:textColor="@color/primaryForeground"
                android:elevation="6dp"
                app:cornerRadius="12dp"
                app:rippleColor="@color/mutedForeground"
                android:backgroundTint="@color/primary" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/primary"
        app:itemIconTint="@color/primaryForeground"
        app:itemTextColor="@color/primaryForeground" />

</RelativeLayout>
